<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:layout_weight="1"
    android:tag="dayOfTheMonthLayout">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            style="@style/RobotoCalendarDayOfTheMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:tag="dayOfTheMonthText"
            android:text="1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/roboto_calendar_circle_size"
                android:layout_height="@dimen/roboto_calendar_circle_size"
                android:src="@drawable/circle"
                android:tag="dayOfTheMonthCircleImage1"
                android:tint="@color/roboto_calendar_blue"
                android:visibility="visible" />

            <ImageView
                android:layout_width="@dimen/roboto_calendar_circle_size"
                android:layout_height="@dimen/roboto_calendar_circle_size"
                android:src="@drawable/circle"
                android:tag="dayOfTheMonthCircleImage2"
                android:tint="@color/roboto_calendar_red"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/roboto_calendar_day_of_month_background_size"
        android:layout_height="@dimen/roboto_calendar_day_of_month_background_size"
        android:background="@drawable/circle"
        android:tag="dayOfTheMonthBackground"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
